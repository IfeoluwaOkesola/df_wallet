{
  "name": "df_wallet",
  "displayName": "",
  "version": "1.0.0",
  "description": "Developer's Foundry Wallet System",
  "main": "dist/src/app.js",
  "repository": "https://github.com/IfeoluwaOkesola/df_wallet.git",
  "author": "IfeoluwaOkesola <99264083+IfeoluwaOkesola@users.noreply.github.com>",
  "license": "MIT",
  "type": "commonjs",
  "private": false,
  "scripts": {
    "tsoa:routes": "tsoa routes",
    "tsoa:spec": "tsoa spec",
    "preswagger:clean": "rimraf src/api/swagger",
    "tsoa:update": "npm run preswagger:clean && npm run tsoa:routes && npm run tsoa:spec",
    "dev": "npm run tsoa:update && nodemon --exec ts-node src/app.ts",
    "build": "rimraf dist && npm run tsoa:update && tsc",
    "lint": "eslint -c ./.eslintrc.js ./src --format stylish --fix --ext .ts",
    "start": "node dist/src/app.js",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "typeorm:ds": "npm run typeorm -- -d ./src/config/postgres",
    "migration:create": "npm run typeorm migration:create",
    "migration:generate": "npm run typeorm:ds -- migration:generate",
    "migration:run": "npm run typeorm:ds -- migration:run",
    "migration:revert": "npm run typeorm:ds -- migration:revert"
  },
  "dependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/chance": "^1.1.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "chance": "^1.1.12",
    "class-validator": "^0.14.1",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongodb": "^6.13.0",
    "morgan": "^1.10.0",
    "ncp": "^2.0.0",
    "pg": "^8.13.1",
    "redis": "^4.7.0",
    "rimraf": "^6.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsoa": "^6.6.0",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.20",
    "typescript": "^5.7.3",
    "uuidv4": "^6.2.13",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yarn": "1.22.22"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin-tslint": "^7.0.2",
    "eslint": "^9.20.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsdoc": "^50.6.3",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "typescript-eslint": "^8.24.0"
  }
}
